{
  "manifest_version": 3,
  "name": "Obscenity Blocker",
  "version": "1.0",
  "description": "Blocks obscene content in real-time.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
